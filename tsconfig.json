{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": false,

    "outDir": "dist",
    "rootDir": "app",

    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,

    "plugins": [
      {
        "name": "next"
      }
    ],

    "paths": {
      "@/*": ["./app/*"]
    }
  },
  "include": ["app"],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    ".storybook",
    "**/*.test.*",
    "**/*.stories.*",
    "**/*.mdx"
  ]
}
